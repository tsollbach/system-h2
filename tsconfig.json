{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "*": ["*", "@types/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
